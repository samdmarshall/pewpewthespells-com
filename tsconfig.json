{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "experimentalDecorators": true,
    "jsx": "react",
    "module": "es2015",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "build",
    "plugins": [{ "name": "typescript-styled-plugin" }],
    "pretty": true,
    "strictNullChecks": false,
    "target": "es6",
		"types": ["jest"],
    "noEmit": true
  },
  "include": ["dangerfile.ts"],
  "exclude": [
    "dangerfile.ts",
    "node_modules",
  ]
}
